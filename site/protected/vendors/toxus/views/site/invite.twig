{#
  An invitation or a password reset 
#}
{% extends this.viewPath('main') %}

{% block content %}
<div class="col-sm-8 col-sm-offset-2 col-xs-12 well well-large">
	{% if error %} {#  The invitation isn't found  #}
		{{ error }}
	{% else %}
		<div class="row">
			<div class="col-sm-10 col-sm-offset-1">
				<h2>{{ this.t('welcome {name}', {'{name}':this.model.username}) }}</h2>
				{% include this.viewPath('flash') %}
				<p>
				{{ Yii_t('base','You have requested a new password. Please enter your password twice so we can validate it and click Set passord.') }}<br/>
				</p>
				{% include this.viewPath('_form') %}
				{% include this.viewPath('_buttons') %}
			</div>			
		</div>		
	{% endif %}
</div>	

{% endblock %}